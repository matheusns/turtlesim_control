<launch>
    <group ns="my_turtle" >
        <node pkg="turtlesim" type="turtlesim_node" name="turtlesim" />

        <node
            launch-prefix="xterm -e"
            output = "screen"
            pkg="turtlesim_control" type="controller.py" name="turtle_pose_controller"/>

        <node pkg="turtlesim" type="turtle_teleop_key" name="teleopkey" />

        <node pkg="turtlesim_control" type="goal_sender.py" name="turtle_pose_goal_sender" />
    </group>
 </launch>
